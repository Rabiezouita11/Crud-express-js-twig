{% extends 'layout.twig' %}

{% block body %}
     <div class="container-fluid">
  <div class="page-header">
    <div class="row">
      <div class="col-lg-6">
        <div class="page-header-left">
          <h3>Edit Products
            <small>Multikart Admin panel</small>
          </h3>
        </div>
      </div>
      <div class="col-lg-6">
        <ol class="breadcrumb pull-right">
          <li class="breadcrumb-item">
            <a href="index.html">
              <i data-feather="home"></i>
            </a>
          </li>
          <li class="breadcrumb-item">Digital</li>
          <li class="breadcrumb-item active">Edit Product</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<!-- Container-fluid Ends-->

<!-- Container-fluid starts-->
<div class="container-fluid">
  <div class="row product-adding">
    <div class="col-xl-12">
      <div class="card">
        <div class="card-header">
          <h5>General</h5>
        </div>
        <div class="card-body">
          <div class="digital-add needs-validation">
      
            <form class="dropzone digits" method="post"   action="http://localhost:3000/products/edit/{{cont._id}}">
           <div class="form-group">
              <label  class="col-form-label pt-0"><span>*</span>
                libelle </label>


              <input type="text"  class="form-control" value="{{cont.Libelle}}"  name="Libelle"  id="inputEmail4">
              
           </div>
               <div class="form-group">
              <label  class="col-form-label pt-0"><span>*</span>
                Prix </label>


              <input type="number"  class="form-control"  value="{{cont.Prix}}"  name="Prix"  id="inputEmail4">
              
           </div>
                  <div class="form-group">
              <label  class="col-form-label pt-0"><span>*</span>
                Description </label>


              <input type="text"  class="form-control"  value="{{cont.Description}}"  name="Description"  id="inputEmail4">
              
           </div>
                  <div class="form-group">
              <label  class="col-form-label pt-0"><span>*</span>
                Quantite </label>


              <input type="number"  class="form-control"  value="{{cont.Quantite}}"  name="Quantite"  id="inputEmail4">
              
           </div>
              <div class="form-group mb-0">
                <div class="product-buttons">
                  <button type="submit"   class="btn btn-primary">Edit</button>
                  <button type="button"  class="btn btn-light">Discard</button>
                </div>
              </div>
            </div>
            </form>

{% endblock %}
